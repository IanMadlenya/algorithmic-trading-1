<Window x:Class="Algorithm.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Realtime Feed" Height="500" Width="900">
    <Grid VerticalAlignment="Top" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Content="Symbol:"/>
        <TextBox Grid.Column="1" Text="{Binding Symbol, UpdateSourceTrigger=Explicit}"/>
        <Button Grid.Column="2" Content="Refresh" Command="{Binding UpdateCommand}"/>

    </Grid>
</Window>